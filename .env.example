# PropertyGuru Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys (Required for production)
COHERE_API_KEY=your_cohere_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Alternative prefixed versions
ZAMEEN_COHERE_API_KEY=your_cohere_api_key_here
ZAMEEN_GROQ_API_KEY=your_groq_api_key_here

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_secret_key_here

# Database and Storage
ZAMEEN_CHROMA_PERSIST_DIR=chromadb_data
ZAMEEN_DATA_DIR=data
ZAMEEN_COLLECTION_NAME=zameen_listings

# Web Scraping
ZAMEEN_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/124.0.0.0 Safari/537.36
ZAMEEN_REQUESTS_TIMEOUT=20

# Model Configuration
ZAMEEN_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Deployment Settings
PORT=8000
HOST=0.0.0.0
WORKERS=1
